---
import { Image } from "astro:assets";
import Section from "@/components/Section.astro";
import MarlonMoraPhoto from "public/assets/Marlon_Photo.webp";
import LinkedInIcon from "@/Icons/LinkedInIcon.astro";
import GithubIcon from "@/Icons/GithubIcon.astro";
import SocialIcon from "@/components/SocialIcons.astro";
---

<Section>
    <div class="flex justify-between items-center flex-col lg:flex-row">
        <div>
            <h3 class="text-3xl font-bold pb-2">Hola, Soy</h3>
            <h1 class="text-5xl font-bold pb-5">Marlon Mora</h1>

            <h2 class="text-2xl text-wrap">
                Estudiante de Administración de Empresas y de Ingeniería de
                Sistemas. De Colombia. Me gusta ofrecer soluciones mediante la
                tecnología
            </h2>

            <nav class="flex justify-start items-center gap-x-4 py-5">
                <SocialIcon
                    href="https://www.linkedin.com/in/marlon-mora-2a4309250/"
                    class="hover:scale-110 transition"
                    title="LinkedIn"
                >
                    <LinkedInIcon class="size-8" />
                </SocialIcon>

                <SocialIcon
                    href="https://github.com/MarlonMora23"
                    class="hover:scale-110 transition"
                    title="GitHub"
                >
                    <GithubIcon class="size-8" />
                </SocialIcon>
            </nav>

            <div
                class="flex justify-center items-center pt-10 lg:justify-start"
            >
                <button
                    type="button"
                    class="text-white bg-blue-700 hover:bg-blue-800 hover:scale-105 transition font-medium rounded-lg text-xl px-5 py-2.5 me-2 mb-2"
                    >Ver proyectos</button
                >
            </div>
        </div>

        <div class="w-full md:max-w-[600px] flex justify-center md:ml-4">
            <figure>
                <Image
                    class="hero-img fadeInMove"
                    src={MarlonMoraPhoto}
                    alt="Marlon Mora"
                    loading="eager"
                />
            </figure>
        </div>
    </div>
</Section>

<style>
    .hero-img {
        filter: drop-shadow(0 25px 25px rgb(0 0 0 / 0.4));
    }

    .fadeInMove {
        opacity: 0;
        transform: translateY(20px);
        animation: moveUp 0.5s linear forwards;
    }

    h1 {
        background: linear-gradient(
            to right,
            #1867ce 10%,
            #1159b8 20%,
            #004aad 30%,
            #002168 40%,
            #000000 50%,
            #002168 60%,
            #004aad 70%,
            #1159b8 80%,
            #1867ce 90%,
            #1867ce 100%
        );
        background-size: 200%;
        color: transparent;
        background-clip: text;
        animation: shine 8s linear infinite;
    }

    @keyframes moveUp {
        100% {
            opacity: 1;
            transform: translateY(0px);
        }
    }

    @keyframes shine {
        to {
            background-position: 200% center;
        }
    }
</style>
